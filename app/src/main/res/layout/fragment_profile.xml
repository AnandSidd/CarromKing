<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/profile_frame"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_profile"
        >

        <TextView
            android:id="@+id/profile_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_profile_icon"
            android:layout_marginLeft="13dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:text="@string/phone_num"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="top"
            />

        <ImageView
            android:id="@+id/profile_user_league_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/golden_trophy"
            />

        <TextView
            android:id="@+id/profile_user_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_below="@id/profile_user_league_img"
            android:layout_marginTop="7dp"
            android:text="@string/gold_lea"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="top"
            />

        <ImageView
            android:id="@+id/profile_ellipse_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ellipse_group_top"
            />

        <ImageView
            android:id="@+id/profile_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_icon"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="19dp"
            android:paddingBottom="13.57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/circular_profile_icon"
            />

        <ImageView
            android:id="@+id/profile_ellipse_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ellipse_group_bottom"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_wallet_balance"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="145dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/game_wallet_balance_bg">

        <ImageView
            android:id="@+id/profile_rupee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/rupee" />

        <TextView
            android:id="@+id/profile_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8.15dp"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@id/profile_rupee_icon"
            android:gravity="top"
            android:text="@string/amount"
            android:textColor="#3A3B59"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/profile_game_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            android:gravity="top"
            android:text="@string/game_wallet"
            android:textColor="#747182"
            android:textSize="10sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_money_button_bg"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp">

        <TextView
            android:id="@+id/profile_add_money"
            android:layout_width="109dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="@string/plus_add_money"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/white"
            android:textSize="15sp" />
        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/profile_diamond_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/profile_wallet_balance"
        android:background="@drawable/diamond_league_bg"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/profile_diamond_lea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="23dp"
            android:gravity="top"
            android:text="@string/diamond_lea"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profile_status_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="49dp"
            android:alpha="0.7"
            android:gravity="top"
            android:text="@string/play_50_mor"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/profile_lock_diamond"
            android:layout_width="11dp"
            android:layout_height="12.5dp"
            android:layout_marginLeft="4.5dp"
            android:layout_marginTop="27.65dp"
            android:layout_toRightOf="@id/profile_diamond_lea"
            android:background="@drawable/ic_baseline_lock" />

        <ImageView
            android:id="@+id/profile_diamond_trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4.59dp"
            android:background="@drawable/diamond_trophy_tilted" />


    </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/profile_gold_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_diamond_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gold_league_bg">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <TextView
            android:id="@+id/profile_gold_lea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="23dp"
            android:gravity="top"
            android:text="@string/gold_lea"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profile_status_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="49dp"
            android:alpha="0.7"
            android:gravity="top"
            android:text="@string/woah_you_ma"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/profile_lock_gold"
            android:layout_width="11dp"
            android:layout_height="12.5dp"
            android:layout_marginLeft="4.5dp"
            android:layout_marginTop="27.65dp"
            android:layout_toRightOf="@id/profile_gold_lea"
            android:background="@drawable/ic_baseline_lock"
            android:backgroundTint="@color/black"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/profile_gold_trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4.59dp"
            android:background="@drawable/golden_trophy_tilted" />


    </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/profile_silver_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gold_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/silver_league_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/selectableItemBackground"
       >

        <TextView
            android:id="@+id/profile_silver_lea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="23dp"
            android:gravity="top"
            android:text="@string/silver_lea"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profile_status_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="49dp"
            android:alpha="0.7"
            android:gravity="top"
            android:text="@string/woah_you_ma"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/profile_lock_silver"
            android:layout_width="11dp"
            android:layout_height="12.5dp"
            android:layout_marginLeft="4.5dp"
            android:layout_marginTop="27.65dp"
            android:layout_toRightOf="@id/profile_silver_lea"
            android:background="@drawable/ic_baseline_lock"
            android:backgroundTint="@color/black"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/profile_diamond_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4.59dp"
            android:background="@drawable/silver_trophy_tilted" />


    </RelativeLayout>
    </FrameLayout>

</RelativeLayout>