<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wallet_frame"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_wallet">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/wallet_balance"
            android:fontFamily="@font/roboto_bold_700"
            android:layout_marginTop="29dp"
            android:gravity="top"
            android:text="@string/rupee"
            android:textColor="#3A3B59"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/roboto_bold_700"
            android:text="500.00"
            android:textColor="#3A3B59"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/total_balan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="75dp"
            android:alpha="0.4"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/total_balance"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/unplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="113dp"
            android:alpha="0.6"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/unplayed"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="115dp"
            android:gravity="top"
            android:src="@drawable/i_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/rupee"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/unplayed_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="400.00"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="162dp"
            android:alpha="0.6"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/winning"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="164dp"
            android:gravity="top"
            android:src="@drawable/i_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/rupee"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/winning_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="50.00"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="211dp"
            android:alpha="0.6"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="Cash Bonus"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="213dp"
            android:gravity="top"
            android:src="@drawable/i_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="233dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="@string/rupee"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cash_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="233dp"
            android:fontFamily="@font/roboto_regular_400"
            android:gravity="top"
            android:text="50.00"
            android:textColor="#3A3B59"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_addMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="113dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/roboto_medium_500"
            android:paddingHorizontal="10dp"
            android:text="@string/add_money_wallet"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="171dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button_withdraw"
            android:fontFamily="@font/roboto_medium_500"
            android:paddingHorizontal="25dp"
            android:text="@string/withdraw_wallet"
            android:textAllCaps="false"
            android:textColor="#1D9FFF"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:paddingVertical="10dp"
        android:text="Transaction History"
        android:textColor="#000000"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular_400"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/walletRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        tools:listitem="@layout/wallet_cardview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="See All Transactions"
        android:fontFamily="@font/roboto_bold_700"
        android:textSize="12sp"
        android:textColor="#1DAEFF"/>

   
</LinearLayout>